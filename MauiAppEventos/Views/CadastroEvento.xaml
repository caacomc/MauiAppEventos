<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.CadastroEvento"
             Title="CadastroEvento"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Beige">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Cadastro do Evento"
                   FontFamily="TangerineRegular"
                   FontSize="70"
                   TextColor="Brown"
                   HorizontalOptions="Center" />

            <!-- Nome -->
            <Label Text="Nome do Evento:"
                   FontSize="25"
                   FontFamily="TangerineBold"
                   TextColor="Brown" />
            <Entry Text="{Binding Nome, Mode=TwoWay}"
                   FontFamily="TangerineBold"
                   FontSize="25"
                   TextColor="Brown"
                   Placeholder="Digite o nome do evento" />

            <!-- Local -->
            <Label Text="Local do Evento:"
                   FontSize="25"
                   FontFamily="TangerineBold"
                   TextColor="Brown" />
            <Entry Text="{Binding Local, Mode=TwoWay}"
                   FontFamily="TangerineBold"
                   FontSize="25"
                   TextColor="Brown"
                   Placeholder="Digite o local" />

            <!-- Custo -->
            <Label Text="Custo por Participante:"
                   FontSize="25"
                   FontFamily="TangerineBold"
                   TextColor="Brown" />
            <Entry Text="{Binding CustoPorParticipante, Mode=TwoWay}"
                   FontFamily="TangerineBold"
                   FontSize="25"
                   Keyboard="Numeric"
                   TextColor="Brown"
                   Placeholder="R$ 0,00" />

            <!-- Participantes -->
            <Frame Padding="10"
                   BackgroundColor="Beige"
                   BorderColor="Brown"
                   CornerRadius="20">
                
                <Grid RowDefinitions="Auto, Auto" 
                      ColumnDefinitions="*, *, 2*">
                    
                    <Label Grid.Row="0" Grid.Column="0" Text="Número de Participantes:"
                           TextColor="Brown"
                           FontFamily="TangerineBold"
                           FontSize="22"/>
                    
                    <Label Grid.Row="0" Grid.Column="1" 
                           BindingContext="{x:Reference stp_participantes}"
                            Text="{Binding Value}"
                           TextColor="Brown"
                           FontFamily="TangerineBold" 
                           FontSize="30"/>

                    <Stepper Grid.Row="0" Grid.Column="2" 
                             x:Name="stp_participantes"
                             Minimum="1"
                             Maximum="500"
                             Increment="1"
                             Value="{Binding NumeroParticipantes, Mode=TwoWay}"/>

                </Grid>
            </Frame>

            <!-- Datas -->
            <Frame Padding="10" BackgroundColor="Beige" BorderColor="Brown" CornerRadius="20">
                <VerticalStackLayout>
                    <Label Text="Período do Evento"
                           FontFamily="TangerineBold"
                           FontSize="40"
                           TextColor="Brown"
                           HorizontalOptions="Center" />

                    <HorizontalStackLayout>
                        <Label Text="Início:"
                               FontFamily="TangerineBold"
                               FontSize="25"
                               TextColor="Brown" />
                        <DatePicker Date="{Binding DataInicio, Mode=TwoWay}" Format="dd/MM/yyyy" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Término:"
                               FontFamily="TangerineBold"
                               FontSize="25"
                               TextColor="Brown" />
                        <DatePicker Date="{Binding DataTermino, Mode=TwoWay}" Format="dd/MM/yyyy" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Botão -->
            <Button Text="Cadastrar"
                    FontFamily="TangerineBold"
                    FontSize="25"
                    BackgroundColor="Brown"
                    TextColor="Beige"
                    CornerRadius="20"
                    Padding="10"
                    HorizontalOptions="Center"
                    Clicked="CadastrarEvento_Clicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>